<%- include("partials/header") %>

<div class="container compose">
    <form class="compose-form" action="/poems/compose" method="POST">
        <div class="form-group">
            <div class="form-div">
                <label>Title</label>
                <input class="form-control" type="text" name="title" id="">
            </div>
            <div class="form-div">
                <label>Body</label>
                <textarea class="form-control compose-body" name="body" rows="10"></textarea>
            </div>
        </div>
        <button class="btn btn-dark submit-btn form-control" type="submit" name="button">Publish</button>
    </form>
</div>



